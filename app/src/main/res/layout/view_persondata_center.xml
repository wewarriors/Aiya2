<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="必要资料"
            android:textSize="16dp"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>

    <ImageView
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="@color/colorBackGround"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="姓名"
            android:textSize="16dp"
            android:textColor="@color/colorName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:text="公子羽"
            android:textSize="16dp"
            android:textColor="@color/colorName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:text="(不可更改）"
            android:textSize="13dp"
            android:textColor="#999999"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorBackGround"/>

    <RelativeLayout
        android:id="@+id/rl_birth"
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <TextView
            android:id="@+id/tvv_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="生日"
            android:textSize="16dp"
            android:textColor="@color/colorName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1995-11-5"
            android:textSize="16dp"
            android:textColor="@color/colorName"
            android:layout_alignBaseline="@+id/tvv_birth"
            android:layout_alignBottom="@+id/tvv_birth"
            android:layout_toRightOf="@+id/tvv_birth"
            android:layout_toEndOf="@+id/tvv_birth"
            android:layout_marginLeft="30dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/rightward_32"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorBackGround"/>

    <RelativeLayout
        android:id="@+id/rl_school"
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <TextView
            android:id="@+id/tvv_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="学校"
            android:textSize="16dp"
            android:textColor="@color/colorName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="西安电子科技大学 2014级"
            android:textSize="16dp"
            android:textColor="@color/colorName"
            android:layout_alignBaseline="@+id/tvv_school"
            android:layout_alignBottom="@+id/tvv_school"
            android:layout_toRightOf="@+id/tvv_school"
            android:layout_toEndOf="@+id/tvv_school"
            android:layout_marginLeft="30dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/rightward_32"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_major"
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <TextView
            android:id="@+id/tvv_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="专业"
            android:textSize="16dp"
            android:textColor="@color/colorName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="智能科学与技术"
            android:textSize="16dp"
            android:textColor="@color/colorName"
            android:layout_alignBaseline="@+id/tvv_major"
            android:layout_alignBottom="@+id/tvv_major"
            android:layout_toRightOf="@+id/tvv_major"
            android:layout_toEndOf="@+id/tvv_major"
            android:layout_marginLeft="30dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/rightward_32"/>
    </RelativeLayout>


</LinearLayout>